# ============================================
# RAILWAY ENVIRONMENT CONFIGURATION
# PAUD Damhil - Sistem Absensi Guru
# ============================================
# Copy these variables to Railway Dashboard > Variables

APP_NAME="PAUD Damhil"
APP_ENV=production
APP_DEBUG=false
APP_URL=${RAILWAY_PUBLIC_DOMAIN:+https://${RAILWAY_PUBLIC_DOMAIN}}
APP_KEY=

APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_TIMEZONE=Asia/Makassar

# ============================================
# DATABASE (Railway MySQL Plugin)
# ============================================
# Railway will auto-inject these from MySQL plugin:
# MYSQL_URL, MYSQLHOST, MYSQLPORT, MYSQLDATABASE, MYSQLUSER, MYSQLPASSWORD

DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST:-127.0.0.1}
DB_PORT=${MYSQLPORT:-3306}
DB_DATABASE=${MYSQLDATABASE:-railway}
DB_USERNAME=${MYSQLUSER:-root}
DB_PASSWORD=${MYSQLPASSWORD:-}

# ============================================
# SESSIONS & CACHE (Use database for Railway)
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=database
QUEUE_CONNECTION=database

# ============================================
# FILESYSTEM
# ============================================
FILESYSTEM_DISK=public

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stderr
LOG_LEVEL=error
